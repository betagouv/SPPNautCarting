{
    "scripts": {
        "build": "rm -rf compiled_static && parcel build",
        "watch": "rm -rf compiled_static && parcel watch",
        "lint": "prettier --check ."
    },
    "source": [
        "frontend/carting.js",
        "frontend/sppnaut.css"
    ],
    "targets": {
        "default": {
            "distDir": "./compiled_static"
        }
    },
    "prettier": {
        "trailingComma": "all",
        "printWidth": 88,
        "tabWidth": 4,
        "semi": false,
        "overrides": [
            {
                "files": "*yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "dependencies": {
        "@hotwired/stimulus": "^3.2.1",
        "ol": "^7.3.0",
        "parcel": "^2.8.3",
        "prettier": "^2.8.7",
        "tailwindcss": "^3.3.0"
    }
}
